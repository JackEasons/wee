{
	"name": "Wee",
	"description": "Your blueprint for modern web development.",
	"paths": {
		"root": "public",
		"assets": {
			"root": "assets",
			"css": "css",
			"js": "js",
			"modules": "modules"
		}
	},
	"style": {
		"guide": {
			"template": "public/assets/guide/index.html",
			"patterns": "public/assets/guide/patterns"
		},
		"build": [

		],
		"compile": {

		}
	},
	"script": {
		"base": {
			"enable": true,
			"features": {
				"assets": true,
				"chain": true,
				"data": true,
				"dom": true,
				"events": true,
				"routes": true,
				"screen": true
			},
			"polyfill": {
				"placeholder": true
			},
			"testing": {
				"placeholders": true,
				"responsive": true
			},
			"legacy": {
				"enable": true,
				"build": [
					"lib/vendor/html5shiv.js",
					"lib/vendor/sizzle.js"
				]
			}
		},
		"build": [

		],
		"compile": {

		}
	},
	"testing": {
		"host": "http://wee.dev",
		"reload": {
			"enable": true,
			"port": 35729,
			"watch": {
				"root": true,
				"paths": [

				],
				"extensions": [
					"html"
				]
			}
		},
		"server": {
			"port": 9000
		},
		"sourceMaps": {
			"css": false,
			"js": true
		}
	}
}