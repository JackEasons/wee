{
    "paths": {
        "root": "public",
        "assets": "assets",
        "source": "source",
        "components": "source/components",
        "build": "build"
    },
    "manifest": {
        "enabled": false,
        "options": {
            "filename": "manifest.json"
        }
    },
    "script": {
        "entry": {
            "app": "app.js"
        },
        "output": {
            "filename": "[name].bundle.js",
            "chunkFilename": "[name].bundle.js"
        },
        "vendor": {
            "enabled": true,
            "options": {
                "name": "vendor"
            }
        },
        "chunking": {
            "enabled": true,
            "options": {
                "name": "common",
                "minChunks": 2
            }
        }
    },
    "style": {
        "entry": {},
        "output": {
            "filename": "[name].min.css",
            "chunkFilename": "[name].min.css"
        },
        "breakpoints": {
            "mobileLandscape": 480,
            "tablet": 768,
            "desktop": 1024,
            "desktop2": 1280,
            "desktop3": 1440
        },
        "breakpointOffset": 25
    },
    "server": {
        "ghostMode": false,
        "host": "auto",
        "port": 9000,
        "https": true,
        "proxy": "https://wee.dev",
        "static": true,
        "reload": {
            "enable": true,
            "watch": {
                "root": true,
                "paths": [],
                "extensions": [
                    "html"
                ],
                "ignore": []
            }
        }
    }
}
