{
	"paths": {
		"root": "public",
		"assets": "assets",
		"source": "resources",
		"build": "build"
	},
	"style": {
		"features": {
			"buttons": true,
			"code": true,
			"forms": true,
			"print": true,
			"tables": true
		},
		"breakpoints": {
			"mobileLandscape": 480,
			"tablet": 768,
			"desktop": 1024,
			"desktop2": 1280,
			"desktop3": 1440
		},
		"breakpointOffset": 25,
		"build": [
			"./resources/assets/styles/custom1.pcss",
			"custom/*.pcss"
		],
		"compile": {
			"file.min.css": [
				"./resources/assets/styles/custom1.pcss",
				"./resources/assets/styles/custom2.pcss"
			],
			"custom.min.css": "custom/*.pcss",
			"full-custom.min.css": [
				"./resources/assets/styles/custom1.pcss",
				"./resources/assets/styles/custom2.pcss",
				"custom/*.pcss"
			]
		}
	}
}